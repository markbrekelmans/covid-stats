{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart",
  "data": {
    "values": [
      {"a": "C", "b": 2},
      {"a": "C", "b": 7},
      {"a": "C", "b": 4},
      {"a": "D", "b": 1},
      {"a": "D", "b": 2},
      {"a": "D", "b": 6},
      {"a": "E", "b": 8},
      {"a": "E", "b": 4},
      {"a": "E", "b": 7}
    ]
  },
  "transform": [
    {
      "window": [{
        "op": "sum",
        "field": "b",
        "as": "running_total"
      }],
      "frame": [-2,0]
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "a",
          "type": "nominal",
          "title": "Category"
        },
        "y": {
          "aggregate": "sum",
          "field": "b",
          "type": "quantitative",
          "title": "Total value"
        },
        "tooltip": {
          "aggregate": "sum",
          "field": "b",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "y": {
          "field": "running_total",
          "type": "quantitative"
        },
        "color": {"value":"red"}
      }
    }
  ]
}
